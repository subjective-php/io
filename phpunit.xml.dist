<phpunit colors="true" forceCoversAnnotation="true">
    <testsuites>
        <testsuite name="PHP Library Test Suite">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./reports/coverage" />
        <log type="coverage-clover" target="./reports/clover.xml"/>
        <log type="junit" target="./reports/junit.xml"/> 
    </logging>
</phpunit>
